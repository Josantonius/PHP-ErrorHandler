{
    "name":        "josantonius/errorhandler",
    "version":     "1.1.6",
    "type":        "library",
    "description": "PHP library for handling exceptions and errors.",
    "keywords": [
        "Exception",
        "Exception handler",
        "Error handler",
        "throw",
        "Error",
        "Throwable",
        "HHVM",
        "PHP"
    ],
    "license": "MIT",
    "authors": [
        {
            "name":     "Josantonius",
            "email":    "hello@josantonius.com",
            "homepage": "https://josantonius.com",
            "role":     "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/josantonius/php-errorhandler/issues",
        "forum":  "http://stackoverflow.com/tags/josantonius/php-errorhandler",
        "source": "https://github.com/josantonius/php-errorhandler"
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^5.6 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.*",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Josantonius\\ErrorHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Josantonius\\ErrorHandler\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit --colors=always;",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.ruleset.xml $(find . -name '*.php');",
        "tests": "clear && vendor/bin/phpcs --standard=phpcs.ruleset.xml $(find . -name '*.php') && vendor/bin/phpunit --colors=always;"
    }
}
